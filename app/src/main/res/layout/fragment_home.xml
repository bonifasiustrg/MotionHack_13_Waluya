<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/imageHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="38dp"
        android:drawableStart="@drawable/map"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:text="Jl Kaliurang km 5.6"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#00FFFFFF"
        android:text="Konsultasi Dokter"
        android:textColor="@color/black"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_konsul_dokter"
        app:layout_constraintStart_toStartOf="@+id/btn_konsul_dokter"
        app:layout_constraintTop_toBottomOf="@+id/btn_konsul_dokter" />

    <ImageView
        android:id="@+id/btn_layanan_medis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_konsul_dokter"
        app:layout_constraintEnd_toStartOf="@+id/btn_darurat"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_konsul_dokter"
        app:layout_constraintTop_toTopOf="@+id/btn_konsul_dokter"
        app:srcCompat="@drawable/rumah_sakit_1_" />


    <ImageView
        android:id="@+id/btn_konsul_dokter"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_layanan_medis"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageHeader"
        app:srcCompat="@drawable/docotr" />

    <ImageView
        android:id="@+id/btn_darurat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_layanan_medis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_layanan_medis"
        app:layout_constraintTop_toTopOf="@+id/btn_konsul_dokter"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ambulance" />

    <Button
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Layanan Medis"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/btn_layanan_medis"
        app:layout_constraintStart_toStartOf="@+id/btn_layanan_medis"
        app:layout_constraintTop_toBottomOf="@+id/btn_layanan_medis" />

    <Button
        android:background="#00FFFFFF"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Darurat"
        android:textColor="@color/black"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_darurat"
        app:layout_constraintStart_toStartOf="@+id/btn_darurat"
        app:layout_constraintTop_toBottomOf="@+id/btn_darurat" />

    <ImageView
        android:id="@+id/btn_covid19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/covid" />


    <Button
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Covid-19"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/btn_covid19"
        app:layout_constraintStart_toStartOf="@+id/btn_covid19"
        app:layout_constraintTop_toBottomOf="@+id/btn_covid19" />

    <ImageView
        android:id="@+id/btn_pengingat_obat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_covid19"
        app:layout_constraintEnd_toStartOf="@+id/btn_darurat"
        app:layout_constraintStart_toEndOf="@+id/btn_covid19"
        app:layout_constraintTop_toTopOf="@+id/btn_covid19"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/penginga" />

    <Button
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Pengingat Obat"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/btn_pengingat_obat"
        app:layout_constraintStart_toStartOf="@+id/btn_pengingat_obat"
        app:layout_constraintTop_toBottomOf="@+id/btn_pengingat_obat" />

    <ImageView
        android:id="@+id/btn_apotek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_covid19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_pengingat_obat"
        app:layout_constraintTop_toTopOf="@+id/btn_covid19"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/apptek" />

    <Button
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Apotek"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/btn_apotek"
        app:layout_constraintStart_toStartOf="@+id/btn_apotek"
        app:layout_constraintTop_toBottomOf="@+id/btn_apotek" />

    <ImageView
        android:id="@+id/btn_butuh_bantuan"
        android:layout_width="42.51dp"
        android:layout_height="36dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/group_3" />

    <TextView
        android:id="@+id/textView8a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="80dp"
        android:text="Halo Ajik"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/imageHeader"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Jangan lupa untuk selalu jaga prokes!"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/textView8a"
        app:layout_constraintTop_toBottomOf="@+id/textView8a" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:text="Berita Kesehatan"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/secondActivityBtn"
        android:layout_width="73dp"
        android:layout_height="28dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#00B4D8"
        android:includeFontPadding="true"
        android:paddingLeft="1dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="1dp"
        android:paddingBottom="0dp"
        android:text="Selengkapnya"
        android:textSize="7sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView9" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rectangle_radius20"
        android:elevation="2dp"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="none"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxStrokeColor="@color/white"
        app:endIconDrawable="@drawable/ic_search"
        app:endIconMode="custom"
        app:endIconTint="@null"
        app:hintEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/imageHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageHeader">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cari yang anda perlukan"
            android:paddingStart="16dp"
            android:paddingTop="0dp"
            android:paddingEnd="16dp"
            android:paddingBottom="0dp"
            android:textColor="@color/black"
            android:textSize="10sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:srcCompat="@drawable/kotak_berita" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/imageView17"
        app:layout_constraintStart_toStartOf="@+id/imageView17"
        app:layout_constraintTop_toTopOf="@+id/imageView17"
        app:srcCompat="@drawable/berita" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/judul_berita"
        android:textColor="@color/black"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView17"
        app:layout_constraintStart_toStartOf="@+id/imageView17"
        app:layout_constraintTop_toBottomOf="@+id/imageView24" />

    <!--    berita2-->

    <ImageView
        android:id="@+id/imageView17b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView17"
        app:layout_constraintStart_toEndOf="@+id/imageView17"
        app:layout_constraintTop_toTopOf="@+id/imageView17"
        app:srcCompat="@drawable/kotak_berita" />

    <ImageView
        android:id="@+id/imageView24b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/imageView17b"
        app:layout_constraintStart_toStartOf="@+id/imageView17b"
        app:layout_constraintTop_toTopOf="@+id/imageView17b"
        app:srcCompat="@drawable/berita" />

    <TextView
        android:id="@+id/textView15b"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/judul_berita"
        android:textColor="@color/black"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView17b"
        app:layout_constraintStart_toStartOf="@+id/imageView17b"
        app:layout_constraintTop_toBottomOf="@+id/imageView24b" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:srcCompat="@drawable/blue_box" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="52dp"
        android:layout_height="10dp"
        android:layout_marginStart="4dp"
        android:text="Kecantikan"
        android:textColor="@color/white"
        android:textSize="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView25"
        app:layout_constraintStart_toStartOf="@+id/imageView25"
        app:layout_constraintTop_toTopOf="@+id/imageView25"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView25"
        app:layout_constraintStart_toEndOf="@+id/textView20"
        app:layout_constraintTop_toTopOf="@+id/imageView25"
        app:srcCompat="@drawable/kanker" />

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView26"
        app:layout_constraintStart_toEndOf="@+id/imageView26"
        app:layout_constraintTop_toTopOf="@+id/imageView26"
        app:srcCompat="@drawable/cantik" />

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView29"
        app:layout_constraintStart_toEndOf="@+id/imageView29"
        app:layout_constraintTop_toTopOf="@+id/imageView29"
        app:srcCompat="@drawable/kanker" />

</androidx.constraintlayout.widget.ConstraintLayout>